        }
        
        .profile-img {
          width: 80px;
          height: 80px;
        }
        
        .card-body {
          padding: 0.75rem;
        }
        
        .card-title {
          font-size: 1.1rem;
        }
        
        .card-text {
          font-size: 0.9rem;
        }
      }
      
      @media (max-width: 575.98px) {
        .breadcrumb-wrap {
          margin-top: 100px;
        }
        
        .content h4 {
          font-size: 1.25rem;
        }
        
        .profile-img {
          width: 70px;
