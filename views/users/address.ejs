        }
        
        .sidebar-username {
          font-size: 1rem;
        }
        
        .card-title {
          font-size: 1rem;
        }
        
        .card-text {
          font-size: 0.85rem;
        }
        
        .btn {
          padding: 0.25rem 0.5rem;
          font-size: 0.875rem;
        }
      }
    </style>
