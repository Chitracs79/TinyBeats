    <style>
      :root {
        --primary-color: #fe4c50;
        --secondary-color: #ff006e;
        --light-bg: #f8f9fa;
        --dark-bg: #212529;
        --border-color: #dee2e6;
        --success-color: #38b000;
        --warning-color: #ffbe0b;
        --danger-color: #d90429;
      }
      
      body {
        font-family: 'poppins', sans-serif;
        background-color: #f5f7fa;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      /* Breadcrumb Styles */
      .breadcrumb-wrap {
        background-color: var(--light-bg);
        padding: 0.75rem 0;
        border-bottom: 1px solid var(--border-color);
        margin-top: 150px;
      }
      
      .breadcrumb {
        margin-bottom: 0;
        font-size: 0.9rem;
        display: flex;
        flex-wrap: wrap;
        align-items: center;
      }
      
      .breadcrumb a {
        color: #6c757d;
        text-decoration: none;
        transition: color 0.2s;
      }
      
      .breadcrumb a:hover {
        color: var(--primary-color);
      }
      
      .toggle-btn {
        margin-left: auto;
        background-color: transparent;
        border: 1px solid var(--border-color);
        color: #6c757d;
        border-radius: 0.25rem;
        padding: 0.25rem 0.75rem;
        font-size: 0.875rem;
        transition: all 0.2s;
      }
      
      .toggle-btn:hover {
        background-color: var(--light-bg);
        color: var(--primary-color);
      }
      
      .toggle-btn i {
        margin-right: 0.25rem;
      }

      /* Sidebar Styles */
      .page-container {
        display: flex;
        flex: 1;
      }
      
      #sidebar {
        width: 280px;
        background-color: #f8f9fa;
        border-right: 1px solid var(--border-color);
        transition: all 0.3s;
        z-index: 1000;
        position: fixed;
        height: calc(100vh - 110px);
        overflow-y: auto;
        top: 110px;
      }
      
      .sidebar-collapsed #sidebar {
        margin-left: -280px;
      }
      
      .sidebar-link {
        display: flex;
        align-items: center;
        padding: 0.75rem 1.25rem;
        color: var(--dark-bg);
        text-decoration: none;
        border-radius: 0.375rem;
        margin-bottom: 0.25rem;
        transition: all 0.2s;
      }
      
      .sidebar-link:hover {
        background-color: rgba(0,0,0,0.05);
      }
      
      .sidebar-link.active {
        background-color: rgba(0,0,0,0.1);
        font-weight: 500;
      }
      
      .sidebar-link i {
        margin-right: 0.75rem;
        width: 20px;
        text-align: center;
      }

      /* Main Content Styles */
      .main-content {
        flex: 1;
        transition: all 0.3s;
        margin-left: 280px;
        padding: 1.5rem;
      }
      
      .sidebar-collapsed .main-content {
        margin-left: 0;
      }
      
      .section-header {
        margin-bottom: 1.5rem;
        border-bottom: 1px solid var(--border-color);
        padding-bottom: 0.75rem;
      }

      /* Address Card Styles */
      .address-card {
        background-color: white;
        border-radius: 0.5rem;
        box-shadow: 0 0.25rem 0.75rem rgba(0,0,0,0.05);
        height: 100%;
        transition: transform 0.2s, box-shadow 0.2s;
        overflow: hidden;
        border: 1px solid var(--border-color);
      }
      
      .address-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.1);
      }
      
      .address-card-header {
        background-color: var(--primary-color);
        color: white;
        padding: 0.75rem 1.25rem;
        font-weight: 500;
      }
      
      .address-card-body {
        padding: 1.25rem;
      }
      
      .address-card-footer {
        display: flex;
        justify-content: space-between;
        padding: 0.75rem 1.25rem;
        background-color: var(--light-bg);
        border-top: 1px solid var(--border-color);
      }
      
      .btn-edit {
        background-color: var(--warning-color);
        color: white;
        border: none;
      }
      
      .btn-delete {
        background-color: var(--danger-color);
        color: white;
        border: none;
      }
      
      .btn-add-address {
        background-color: var(--primary-color);
        color: white;
        border: none;
        border-radius: 0.375rem;
        padding: 0.5rem 1.5rem;
        font-weight: 500;
        transition: all 0.2s;
      }
      
      .btn-add-address:hover {
        background-color: #fe4c50;
        color: white;
      }

      /* Content container */
      .content {
        padding: 1.5rem;
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
      }

      /* Card Styles */
      .card {
        transition: transform 0.2s, box-shadow 0.2s;
        margin-bottom: 1.5rem;
      }

      .card:hover {
        transform: translateY(-3px);
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.1);
      }

      /* Button Styles */
      .btn-primary {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
        transition: all 0.2s;
        margin-top: 1rem;
        margin-bottom: 1.5rem;
      }

      .btn-primary:hover {
        background-color: #2563eb;
        border-color: #2563eb;
      }

      /* Profile Image */
      .profile-img {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid var(--light-bg);
      }

      /* Sidebar Profile Section */
      .sidebar-profileImage {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-bottom: 1.5rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid var(--border-color);
      }

      .sidebar-username {
        margin-top: 0.75rem;
        font-size: 1.1rem;
        font-weight: 500;
      }

      .inputFile {
        width: 100%;
        margin-top: 0.5rem;
        font-size: 0.8rem;
      }

      .upload-btn {
        margin-top: 0.5rem;
        background-color: transparent;
        color: white;
        border: none;
        border-radius: 0.25rem;
        padding: 0.25rem 0.75rem;
        transition: all 0.2s;
      }

      .upload-btn:hover {
        background-color: #2563eb;
      }

      /* Container fluid with custom styles */
      .container-fluid {
        width: 100%;
        padding-right: 15px;
        padding-left: 15px;
        margin-right: auto;
        margin-left: auto;
        transition: all 0.3s;
      }

      /* Sidebar section text color fix */
      .sidebar-section .text-uppercase {
        color: #fcfcfc !important;
      }

      /* Responsive Media Queries */
      @media (min-width: 1400px) {
        .content {
          max-width: 1320px;
        }
        
        #sidebar {
          width: 300px;
        }
        
        .sidebar-collapsed #sidebar {
          margin-left: -300px;
        }
        
        .main-content {
          margin-left: 300px;
        }
      }

      @media (min-width: 992px) and (max-width: 1399px) {
        .content {
          max-width: 960px;
        }
        
        #sidebar {
          width: 260px;
        }
        
        .sidebar-collapsed #sidebar {
          margin-left: -260px;
        }
        
        .main-content {
          margin-left: 260px;
        }
      }

      @media (max-width: 991.98px) {
        #sidebar {
          margin-left: -280px;
          z-index: 1050;
        }
        
        .sidebar-expanded #sidebar {
          margin-left: 0;
        }
        
        .container-fluid {
          margin-left: 0;
          width: 100%;
        }
        
        .sidebar-expanded .container-fluid {
          margin-left: 0;
        }
        
        /* Add overlay when sidebar is expanded on mobile */
        .sidebar-overlay {
          display: none;
          position: fixed;
          top: 0;
          left: 0;
          right: 0;
          bottom: 0;
          background-color: rgba(0,0,0,0.5);
          z-index: 1049;
        }
        
        .sidebar-expanded .sidebar-overlay {
          display: block;
        }
      }
      
      @media (max-width: 767.98px) {
        .breadcrumb-wrap {
          margin-top: 120px;
        }
        
        .breadcrumb {
          font-size: 0.8rem;
        }
        
        .content {
          padding: 1rem;
        }
        
        .section-header {
