<%- include('../../views/partials/user/header',{user:user}) %>
<style>
    .breadcrumbs
{
	width: 100%;
	height: 60px;
	border-bottom: solid 1px #ebebeb;
	margin-bottom: 79px;
}
.breadcrumbs ul li
{
	display: inline-block;
	margin-right: 17px;
}
.breadcrumbs ul li.active a
{
	color: #b9b4c7;
}
.breadcrumbs ul li i
{
	margin-right: 17px;
}
.breadcrumbs ul li a
{
	color: #51545f;
}

    @media (max-width: 767.98px) {
        .shopping-summery {
            display: none;
        }
        
        .cart-totals {
            margin-top: 1rem;
        }
    }
    
    @media (min-width: 768px) {
        .mobile-cart-items {
            display: none;
        }
    }
    
    .quantity-control {
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .detail-qty.border.radius {
        display: inline-flex;
        padding: 0.25rem;
    }
    
