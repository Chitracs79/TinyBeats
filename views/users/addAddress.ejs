    <style>
      :root {
        --primary-color: #fe4c50;
        --secondary-color: #ff006e;
        --light-bg: #f8f9fa;
        --dark-bg: #212529;
        --border-color: #dee2e6;
        --success-color: #38b000;
        --warning-color: #ffbe0b;
        --danger-color: #d90429;
      }
      
      body {
        font-family: 'poppins', sans-serif;
        background-color: #f5f7fa;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      .breadcrumb-wrap {
        background-color: var(--light-bg);
        padding: 0.75rem 0;
        border-bottom: 1px solid var(--border-color);
        margin-top: 150px;
      }
      
      .breadcrumb {
        margin-bottom: 0;
        font-size: 0.9rem;
        display: flex;
        flex-wrap: wrap;
        align-items: center;
      }
      
      .breadcrumb a {
        color: #6c757d;
        text-decoration: none;
        transition: color 0.2s;
      }
      
      .breadcrumb a:hover {
        color: var(--primary-color);
      }
      
      .toggle-btn {
        margin-left: auto;
        background-color: transparent;
        border: 1px solid var(--border-color);
        color: #6c757d;
        border-radius: 0.25rem;
        padding: 0.25rem 0.75rem;
        font-size: 0.875rem;
        transition: all 0.2s;
      }
      
      .toggle-btn:hover {
        background-color: var(--light-bg);
        color: var(--primary-color);
      }
      
      .toggle-btn i {
        margin-right: 0.25rem;
      }

      /* Sidebar Styles */
      .page-container {
        display: flex;
        flex: 1;
      }
      
      #sidebar {
        width: 280px;
        background-color: #f8f9fa;
        border-right: 1px solid var(--border-color);
        transition: all 0.3s;
        z-index: 1000;
        position: fixed;
        height: calc(100vh - 110px);
        overflow-y: auto;
        top: 110px;
      }
      
      .sidebar-collapsed #sidebar {
        margin-left: -280px;
      }
      
      .sidebar-link {
        display: flex;
        align-items: center;
        padding: 0.75rem 1.25rem;
        color: var(--dark-bg);
        text-decoration: none;
        border-radius: 0.375rem;
        margin-bottom: 0.25rem;
        transition: all 0.2s;
      }
      
      .sidebar-link:hover {
        background-color: rgba(0,0,0,0.05);
      }
      
      .sidebar-link.active {
        background-color: rgba(0,0,0,0.1);
        font-weight: 500;
      }
      
      .sidebar-link i {
        margin-right: 0.75rem;
        width: 20px;
        text-align: center;
      }

      /* Main Content Styles */
      .main-content {
        flex: 1;
        transition: all 0.3s;
        margin-left: 280px;
        padding: 1.5rem;
      }
      
      .sidebar-collapsed .main-content {
        margin-left: 0;
      }
      
      .section-header {
        margin-bottom: 1.5rem;
        border-bottom: 1px solid var(--border-color);
        padding-bottom: 0.75rem;
      }

      /* Address Card Styles */
      .address-card {
        background-color: white;
        border-radius: 0.5rem;
        box-shadow: 0 0.25rem 0.75rem rgba(0,0,0,0.05);
        height: 100%;
        transition: transform 0.2s, box-shadow 0.2s;
        overflow: hidden;
        border: 1px solid var(--border-color);
      }
      
      .address-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.1);
      }
      
      .address-card-header {
        background-color: var(--primary-color);
        color: white;
        padding: 0.75rem 1.25rem;
        font-weight: 500;
      }
      
      .address-card-body {
        padding: 1.25rem;
      }
      
      .address-card-footer {
        display: flex;
        justify-content: space-between;
        padding: 0.75rem 1.25rem;
        background-color: var(--light-bg);
        border-top: 1px solid var(--border-color);
      }
      
      .btn-edit {
        background-color: var(--warning-color);
        color: white;
        border: none;
      }
      
      .btn-delete {
        background-color: var(--danger-color);
        color: white;
        border: none;
      }
      
      .btn-add-address {
        background-color: var(--primary-color);
        color: white;
        border: none;
        border-radius: 0.375rem;
        padding: 0.5rem 1.5rem;
        font-weight: 500;
        transition: all 0.2s;
      }
      
      .btn-add-address:hover {
        background-color: #2563eb;
        color: white;
      }

      /* Content area styles */
      .content {
        flex: 1;
        padding: 1.5rem;
        transition: all 0.3s;
        margin-left: 280px;
        width: calc(100% - 280px);
      }
      
      .sidebar-collapsed .content {
        margin-left: 0;
        width: 100%;
      }

      /* Form styles */
      .form-control {
        width: 100%;
        max-width: 100%;
      }

      .error {
        color: var(--danger-color);
        font-size: 0.8rem;
        display: block;
        margin-top: 0.25rem;
      }

      /* Profile image styles */
      .profile-img {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 1rem;
      }

      .sidebar-profileImage {
        text-align: center;
        padding-bottom: 1.5rem;
        margin-bottom: 1.5rem;
        border-bottom: 1px solid var(--border-color);
      }

      .sidebar-username {
        font-size: 1.1rem;
        margin-top: 0.5rem;
        font-weight: 500;
      }

      .inputFile {
        width: 100%;
        max-width: 160px;
        margin: 0.5rem auto;
        font-size: 0.8rem;
      }

      .upload-btn {
        background-color: var(--primary-color);
        color: white;
        border: none;
        border-radius: 0.25rem;
        padding: 0.25rem 0.75rem;
        font-size: 0.8rem;
        transition: all 0.2s;
      }

      .upload-btn:hover {
        background-color: var(--secondary-color);
      }

      /* Responsive Adjustments */
      @media (max-width: 1199.98px) {
        .content {
          padding: 1.25rem;
        }
      }

      @media (max-width: 991.98px) {
        #sidebar {
          margin-left: -280px;
        }
        
        .sidebar-expanded #sidebar {
          margin-left: 0;
        }
        
        .content {
          margin-left: 0;
          width: 100%;
        }
        
        .sidebar-expanded .content {
          margin-left: 280px;
          width: calc(100% - 280px);
        }
        
        /* Add overlay when sidebar is expanded on mobile */
        .sidebar-overlay {
          display: none;
          position: fixed;
          top: 0;
          left: 0;
          right: 0;
          bottom: 0;
          background-color: rgba(0,0,0,0.5);
          z-index: 999;
        }
        
        .sidebar-expanded .sidebar-overlay {
          display: block;
        }
      }
      
      @media (max-width: 767.98px) {
        .breadcrumb-wrap {
          margin-top: 130px;
        }

        .breadcrumb {
          font-size: 0.8rem;
        }
        
        .section-header {
