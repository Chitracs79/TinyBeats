<div class="sidebar">
    <div class="sidebar_section">
        <div class="sidebar_title">
            <h5>Categories</h5>
        </div>
        <ul class="sidebar_categories">
            <% categories.forEach(category =>{ %>
            <li class="<%= selectedCategory === category._id.toString() ? 'active' : '' %>">
                <a href="/filter?category=<%= category._id %>"><%= category.name %></a>
            </li> 
          
            <!-- <li class="active"><a href="#"><span><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>Essentials</a></li> -->
            
            <% }) %>
        </ul>
    </div>
