<%- include('../partials/admin/header') %>


  <style>
    .search-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1rem;
      margin-bottom: 1.5rem;
      width: 100%;
    }

    @media (min-width: 768px) {
      .search-container {
        flex-direction: row;
        justify-content: center;
      }
    }

    .search-form {
      width: 100%;
      max-width: 400px;
    }

    .search-actions {
      display: flex;
      gap: 0.5rem;
    }

    .table-responsive {
      overflow-x: auto;
    }

    th:nth-child(5), td:nth-child(5) {
      width: 200px;
    }

        .pagination {
            margin-top: 20px;
            justify-content: center;
            align-items: center;
        }

        .pagination a {
            padding: 10px;
            margin: 4px;
            text-decoration: none;
            background-color: white;
            color: black;
            font-weight: bold;
            border-radius: 50%;
            align-items: center;
        }

        .pagination a i {
            padding: 4px;
        }

        .pagination a.active {
            background-color: #DAADCC;
            font-weight: bold;
        }
  
    
  </style>
</head>
<body>

<div class="container-fluid mt-4">
  <div class="card">
    <div class="card-header">
      <h2>Wallet Transactions</h2>
    </div>

    <!-- Search Bar -->
    <div class="search-container">
        <form class="search-form mt-3" method="GET" action="/admin/wallet">
            <div class="input-group border border-1 rounded-pill overflow-hidden">
              <input
                type="text"
                class="form-control border-0"
                placeholder="Search by user or transaction ID"
                name="search"
                value="<%= search %>"
              />
              <button class="btn border-0 bg-white" type="submit">
                <i class="fas fa-search text-primary"></i>
              </button>
            </div>
          </form>
          
      <div class="search-actions mt-3">
        <a href="/admin/wallet" class="btn btn-secondary rounded-pill d-none" id="clearSearch" >
          <i class="fas fa-times me-1"></i> Clear
        </a>
      </div>
    </div>


<div class="card-body">
    <div class="table-responsive">

      <% 
        const allTransactions = [];
        wallets.forEach(wallet => {
          wallet.transactions.forEach(transaction => {
            allTransactions.push({
              transaction,
              user: wallet.userId
            });
          });
        });

        const limit = 10;
        const page = parseInt(currentPage) || 1;
        const startIndex = (page - 1) * limit;
        const endIndex = page * limit;
        const paginatedTransactions = allTransactions.slice(startIndex, endIndex);
        const totalTransactions = allTransactions.length;
        const totalPagesCalc = Math.ceil(totalTransactions / limit);
      %>

      <table class="table">
        <thead  style="background-color:#DAADCC ;color: white;">
          <tr>
            <th>Transaction ID</th>
            <th>Date</th>
            <th>User</th>
            <th>Type</th>
            <th>Amount</th>
            <th>Action</th> 
          </tr>
        </thead>
        <tbody>
          <% paginatedTransactions.forEach(({ transaction, user }) => { %>
            <tr>
              <td><%= transaction.transactionId %></td>
              <td><%= new Date(transaction.date).toLocaleDateString() %></td>
              <td><%= user?.name || "N/A" %></td>
              <td>
                <span class="badge <%= transaction.type === 'credit' ? 'bg-success text-dark' : 'bg-danger text-white' %>">
                  <%= transaction.type.charAt(0).toUpperCase() + transaction.type.slice(1) %>
                </span>
              </td>
              <td>â‚¹<%= transaction.amount.toFixed(2) %></td>
              <td>
                <a href="/admin/walletTransaction/<%= transaction.transactionId %>" class="btn btn-sm btn-info">
                  <i class="fas fa-eye"></i> View
                </a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  
    
  <!-- Pagination -->
  <% let startPage=Math.max(1, currentPage-1);
                 let endPage=Math.min(totalPagesCalc,startPage+2) ;
                 if(endPage - startPage < 2){ startPage=Math.max(1,endPage-2) } %>
                    <div class="pagination">
                        <% if (currentPage> 1) { %>
                            <a href="?page=<%= currentPage - 1 %>">
                                <i class="fa-solid fa-backward"></i>
                            </a>
                            <% } %>

                                <% for (let i= startPage; i <= endPage; i++) { %>
                                    <a href="?page=<%= i %>"
                                        class="<%= currentPage === i ? 'active' : '' %>">
                                        <%= i %>
                                    </a>
                                    <% } %>

                                        <% if (currentPage < totalPagesCalc) { %>
                                            <a href="?page=<%= currentPage + 1 %>">
                                                <i class="fa-solid fa-forward"></i>
                                            </a>
                                            <% } %>
      
  </div>


</div>

<script>

  document.addEventListener("DOMContentLoaded", function () {
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.has("search")) {
      document.getElementById("clearSearch").classList.remove("d-none");
    }
  });
</script>




<%- include('../partials/admin/footer') %>